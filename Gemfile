source 'https://rubygems.org'

# For local development, use plain Jekyll (github-pages has compilation issues on newer macOS)
# GitHub Pages will use github-pages gem automatically when deployed
gem 'jekyll', '~> 4.3'
gem 'webrick', '~> 1.8'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jekyll-paginate'
  gem 'jekyll-gist'
  gem 'jemoji'
end

# Uncomment for production parity testing (requires older macOS SDK):
# gem 'github-pages'
